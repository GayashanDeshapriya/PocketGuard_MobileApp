<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Login"
    android:padding="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:padding="10dp"
        android:background="@drawable/rounded_corner">

        <ImageView
            android:id="@+id/LogoImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/profile_icon"
            android:layout_centerHorizontal="true"
            android:contentDescription="TODO" />
        <TextView
            android:id="@+id/LogoName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:fontFamily="@font/bangers"
            android:textSize="30sp"
            android:layout_below="@+id/LogoImage"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/slogan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/slogan"
            android:fontFamily="@font/bangers"
            android:textSize="15sp"
            android:layout_below="@+id/LogoName"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            />

    </RelativeLayout>


    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/dashboard_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="2"
            android:rowCount="2"
            android:padding="25dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/expense_tracking"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="15dp"

                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/expence"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/expence"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/expense"
                        android:gravity="center"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_gravity="center"


                        />


                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/budget_manage_card"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="15dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/budget"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/budget"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/budget"
                        android:gravity="center"
                        android:textSize="25sp"
                        android:textStyle="bold"/>


                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/saving_goals"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="15dp"
               >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/saving"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/emergency"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Saving Goals"
                        android:gravity="center"
                        android:textSize="24sp"
                        android:textStyle="bold"/>



                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/emergency_fund"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="15dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/emergency"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/saving"
                        android:layout_gravity="center"></ImageView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Emergency Fund"
                        android:gravity="center"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        />


                </LinearLayout>



            </com.google.android.material.card.MaterialCardView>

        </GridLayout>

</LinearLayout>